<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="progressRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:indeterminate">@drawable/ratingbar_full</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
	
    <style name="mainTheme">
        <item name="android:background">@color/default_white</item>"
    </style>    

    <style name="loginScreen"> 
        <item name="android:background">@color/myne</item>
     </style>
    
    <style name="surveyLayout"> 
        <item name="android:background">@color/myne_gray</item>
        </style>
    
    
    <style name="loginScreenEditText"> 
        <item name="android:background">@color/default_white</item>
        <item name="android:layout_marginTop">6dip</item>
        </style>
        
            
    <style name="labelTextAppearance" parent="@android:style/TextAppearance"> 
        <item name = "android:textSize">24sp</item> 
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textStyle">bold</item>
      </style> 
        
    <style name="headerTextAppearance" parent="@android:style/TextAppearance"> 
        <item name = "android:textSize">24sp</item> 
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textStyle">bold</item>
      </style> 

    
    
    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
         <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:background">@color/default_white</item>
    </style>
    
    
    <!-- Implementation note: 
    			the next 2 styles work together to change the color of the action bar. 
    			first we change the actionBarStyle to @style/MyActionBar which we 
    		 	defined immediately after. 
    		 	
    		 	In order to apply the change we have to update the manifest 
    		 	to use android:theme = "@style/CustomActionBarTheme"
     -->
    
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item> 
       </style> 
    
 	   <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse"> 
        <item name="android:background">@color/myne_gray</item>
        </style>
    

</resources>     